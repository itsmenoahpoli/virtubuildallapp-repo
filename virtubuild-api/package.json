{
	"name": "node-backend-api",
	"version": "1.0.0",
	"description": "noah backend nodejs api boilderplate",
	"main": "build/index.js",
	"scripts": {
		"build": "npx tsc && npx tsc-alias",
		"start": "node ./dist/index.js",
		"start:preview": "npx tsc && npx tsc-alias && node ./dist/index.js",
		"dev": "nodemon",
		"dev:clean": "npm run kill:port && npm run dev",
		"kill:port": "ts-node -r tsconfig-paths/register ./scripts/kill-port.ts",
		"prettier:format": "prettier --write .",
		"db:setup": "ts-node -r tsconfig-paths/register ./scripts/setup-db.ts && npm run db:seed",
		"db:seed": "ts-node -r tsconfig-paths/register ./scripts/seed-simple.ts",
		"db:reset": "ts-node -r tsconfig-paths/register ./scripts/simple-db-reset.ts",
		"migration:generate": "ts-node -r tsconfig-paths/register ./scripts/generate-migration.ts",
		"test": "jest --runInBand",
		"test:watch": "jest --watch",
		"test:ci": "jest --ci --reporters=default --reporters=jest-junit",
		"test:coverage": "jest --coverage",
		"test:unit": "jest --testPathPattern=service",
		"test:integration": "jest --testPathPattern=controller",
		"test:e2e": "jest --testPathPattern=e2e"
	},
	"keywords": [
		"node",
		"typescript",
		"javascript",
		"rest-api",
		"express"
	],
	"author": "Patrick Policarpio",
	"license": "ISC",
	"dependencies": {
		"@sentry/profiling-node": "^8.54.0",
		"argon2": "^0.41.1",
		"axios": "^1.12.2",
		"bullmq": "^5.15.0",
		"chalk": "^4.1.2",
		"class-transformer": "^0.5.1",
		"class-validator": "^0.14.1",
		"compression": "^1.7.5",
		"cors": "^2.8.5",
		"dotenv": "^16.4.7",
		"express": "^4.21.2",
		"express-rate-limit": "^7.4.1",
		"helmet": "^8.0.0",
		"hpp": "^0.2.3",
		"ioredis": "^5.4.1",
		"jsonwebtoken": "^9.0.2",
		"morgan": "^1.10.0",
		"multer": "^1.4.5-lts.1",
		"nodemailer": "^6.9.15",
		"otplib": "^12.0.1",
		"pg": "^8.13.1",
		"pino": "^9.4.0",
		"pino-pretty": "^11.0.0",
		"prettier": "^3.4.2",
		"qrcode": "^1.5.4",
		"redis": "^4.7.0",
		"reflect-metadata": "^0.2.2",
		"socket.io": "^4.8.1",
		"swagger-jsdoc": "^6.2.8",
		"swagger-ui-express": "^5.0.1",
		"typeorm": "^0.3.20",
		"typescript": "^5.7.3",
		"url": "^0.11.4",
		"winston": "^3.14.2"
	},
	"devDependencies": {
		"@types/compression": "^1.7.5",
		"@types/cors": "^2.8.17",
		"@types/express": "^5.0.0",
		"@types/helmet": "^0.0.48",
		"@types/hpp": "^0.2.6",
		"@types/jest": "^30.0.0",
		"@types/jsonwebtoken": "^9.0.8",
		"@types/morgan": "^1.9.9",
		"@types/multer": "^1.4.12",
		"@types/node": "^22.13.0",
		"@types/nodemailer": "^6.4.19",
		"@types/qrcode": "^1.5.5",
		"@types/supertest": "^6.0.3",
		"@types/swagger-jsdoc": "^6.0.4",
		"@types/swagger-ui": "^3.52.4",
		"@types/swagger-ui-express": "^4.1.7",
		"jest": "^29.7.0",
		"jest-junit": "^16.0.0",
		"nodemon": "^3.1.9",
		"supertest": "^7.0.0",
		"ts-jest": "^29.2.5",
		"ts-node": "^10.9.2",
		"tsc-alias": "^1.8.10",
		"tsconfig-paths": "^4.2.0"
	}
}
